{
  "name": "nviron",
  "version": "2.1.7",
  "description": "Lightweight, type-safe environment variable management library built for modern JavaScript and TypeScript projects",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "dev": "tsc --watch",
    "build": "tsc",
    "test": "vitest run"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ubeyidah/nviron.git",
    "directory": "packages/nviron"
  },
  "homepage": "https://nviron.vercel.app",
  "bugs": {
    "url": "https://github.com/ubeyidah/nviron/issues"
  },
  "keywords": [
    "environment",
    "env",
    "config",
    "validation",
    "zod",
    "typescript",
    "type-safe",
    "dotenv",
    "env-var",
    "configuration"
  ],
  "author": "Ubeyidah",
  "license": "ISC",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@nviron/eslint-config": "workspace:*",
    "@nviron/typescript-config": "workspace:*",
    "@types/node": "^22.15.3",
    "eslint": "^9.34.0",
    "typescript": "5.9.2",
    "vitest": "^3.2.4"
  }
}
